import { type CollectionEntry, getCollection } from 'astro:content';

export async function getStaticPaths() {
    const posts = await getCollection('cmd');
    console.log(posts);

    return posts.map((post: CollectionEntry<'cmd'>) => ({
        params: { cmd: post.slug },
        props: post,
    }));
}

const post = Astro.props;
const { Content } = await post.render();
---


    <p>{post.data.pubDatetime.toString()}</p>
    <p>{post.data.modDatetime.toString()}</p>
    <p><em>{post.data.description}</em></p>
    <p>著者: {post.data.author}</p>
    <img
        src={post.data.image?.url}
        width="300"
        alt={post.data.image?.alt}
    />
    <div class="tags">
        {
            post.data.tags.map((tag: string) => (
                <p class="tag">
                    <a href={`/tags/${tag}`}>{tag}</a>
                </p>
            ))
        }
    </div>
    <Content />

